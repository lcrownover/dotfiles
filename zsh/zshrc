export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="robbyrussell"
GEM_HOME="$HOME/.gem"
export PATH="$GEM_HOME/bin:$PATH"
export PATH="$HOME/.cargo/bin:$PATH"
export PATH="/opt/puppetlabs/bin/:$PATH"
export PATH="/usr/local/opt/python/libexec/bin:$PATH"
export PATH="/usr/local/opt/python2/libexec/bin:$PATH"
export TERM=xterm-256color
export SUBSCRIPTION_ID="377758e9-c4a1-44d2-b701-fc556632fd3c"
export DOCKER_CONFIG=~/.docker/
export BOLT=~/.puppetlabs/bolt
export PUPPET_BASE_DIR="$HOME/puppet/is"
export ZSH_CONF_DIR="$HOME/.config/zsh"

if [ -d $HOME/GoogleDrive ]; then
	export GDRIVEDIR="GoogleDrive"
elif [ -d $HOME/Google\ Drive ]; then
	export GDRIVEDIR="Google\ Drive"
fi

ulimit -n 1024

plugins=(
	git
	zsh-syntax-highlighting
	zsh-autosuggestions
	docker
)

eval "$(rbenv init -)"

source $ZSH/oh-my-zsh.sh

unsetopt AUTO_CD

# custom prompt
PROMPT='%{$fg[red]%}[%{$fg[green]%}%n%{$fg[yellow]%}@%{$fg[blue]%}%M:%{$fg[magenta]%}%1~%{$fg[red]%}] $(git_prompt_info)% %{$reset_color%}'

# Source all my configs from the conf dir
for f in $ZSH_CONF_DIR/*.sh; do
    source $f
done

test -e "$HOME/.iterm2_shell_integration.zsh" && source "$HOME/.iterm2_shell_integration.zsh"


