# performance testing
# PS4=$'\\\011%D{%s%6.}\011%x\011%I\011%N\011%e\011'
# exec 3>&2 2>/tmp/zshstart.$$.log
# setopt xtrace prompt_subst
# zmodload zsh/zprof

# auto attach to tmux on kitty and wsl
if [ -z $TMUX ]; then
    # attach to main if terminal is kitty
    if [[ "$TERM" = "xterm-kitty" ]]; then
        tmux new-session -A -s main
    # attach to main if terminal is alacritty/wezterm (this conflicts with vs code)
    elif [[ "$TERM" = "xterm-256color" ]]; then
        tmux new-session -A -s main
    elif  [[ "$DOT_OS" = "wsl" ]]; then
        tmux new-session -A -s main
    fi
fi

export ZSH=$HOME/.oh-my-zsh
ZSH_THEME="robbyrussell"

ulimit -n 2048

plugins=(
    git
    zsh-autosuggestions
    docker
    zsh-syntax-highlighting
)

ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=8'
ZSH_AUTOSUGGEST_MANUAL_REBIND=true

source $ZSH/oh-my-zsh.sh
unsetopt AUTO_CD

if [[ -d $HOME/.pyenv ]]; then
    export PYENV_ROOT="$HOME/.pyenv"
    export PATH="$PYENV_ROOT/bin:$PATH"
    eval "$(pyenv init - --no-rehash zsh)"
fi

if [[ $HOME == "/Users/$(whoami)" ]]; then
    export PATH="$PATH:$HOME/.local/bin"
fi

setopt prompt_subst

# end performance testing
# unsetopt xtrace
# exec 2>&3 3>&-
# zprof
