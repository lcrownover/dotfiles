#!/usr/bin/env bash

pushd

if [[ -L "$HOME/dotfiles" ]] || [[ -d "$HOME/dotfiles" ]]; then
    ln -s "$(pwd)" $HOME/dotfiles
fi
cd ~/dotfiles
mkdir -p ~/.config

for d in `find . -type d -maxdepth 1 -not -path ./.git`; do
    if [[ -f $d/link ]]; then
        cd $d
        bash link
        cd ..
    fi
done

popd
